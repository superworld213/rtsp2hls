{
  "files": [
    "dist/**/*",
    "electron/**/*",
    "package.json",
    "ffmpeg/**/*",
    "node_modules/**/*",
    "!node_modules/**/*.map"
  ],
  "extraMetadata": {
    "debug": true
  },
  "appId": "com.rtsp2hls.app",
    "productName": "RTSP2HLS",
    "directories": {
      "output": "builder"
    },
  "win": {
    "target": "nsis"
  },
  "nsis": {
    "oneClick": false,
    "allowElevation": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "RTSP2HLS",
    "perMachine": true
  },
  "asar": true,
  "asarUnpack": [
    "**/*.node",
    "ffmpeg/**/*"
  ]
}